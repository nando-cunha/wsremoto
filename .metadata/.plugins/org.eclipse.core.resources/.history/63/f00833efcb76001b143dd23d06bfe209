package repeticao;

import javax.swing.JOptionPane;

public class Exercicio1Repeticao {

	public static void main(String[] args) {
		int dia = Integer.parseInt(JOptionPane.showInputDialog("Digite o dia de hoje: "));
		do
		{
			System.out.println("Dia no formato errado!");
		}
		while(dia>0 || dia <31);
		String mes = JOptionPane.showInputDialog("Digite o mês").toLowerCase();
		do
		{
			System.out.println("Mês inexistente");
		}
		while(mes.contains("janeiro"+"fevereiro"+"março"+"maio"+"abril"+"junho"+"julho"+"agosto"+"setembro"+"outubro"+"novembro"+"dezembro")); 
		
		
		
	}

}
